<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/btnBack"
        android:layout_width="33dp"
        android:layout_height="33dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="18dp"
        android:background="@drawable/ic_arrow_left"
        android:backgroundTint="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvUbahKataSandi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ubah_kata_sandi"
        android:textSize="16sp"
        android:fontFamily="@font/epilogue_bold"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/tvKataSandi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginTop="40dp"
        android:textColor="@color/black"
        android:fontFamily="@font/epilogue_sembold"
        android:text="Masukkan Kata Sandi Baru"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvUbahKataSandi"/>


    <ImageView
        android:id="@+id/rectagle1"
        android:layout_width="340dp"
        android:layout_height="60dp"
        android:layout_marginStart="36dp"
        android:layout_marginEnd="36dp"
        android:src="@drawable/rectagle2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/tvKataSandi" />

    <TextView
        android:id="@+id/tvRecKataSandi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/rectagle1"
        android:fontFamily="@font/epilogue_sembold"
        android:text="@string/string_password"
        android:textColor="@color/white"
        app:layout_constraintTop_toTopOf="@+id/rectagle1"
        app:layout_constraintTop_toBottomOf="@+id/tvKataSandi"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"/>

    <TextView
        android:id="@+id/tvKonfirmasiKataSandi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginTop="15dp"
        android:textColor="@color/black"
        android:fontFamily="@font/epilogue_sembold"
        android:text="@string/konfirmasi_kata_sandi"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rectagle1"/>


    <ImageView
        android:id="@+id/rectagle2"
        android:layout_width="340dp"
        android:layout_height="60dp"
        android:layout_marginStart="36dp"
        android:src="@drawable/rectagle2"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/tvKonfirmasiKataSandi" />

    <TextView
        android:id="@+id/tvRecKonfirmasiKataSandi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/rectagle2"
        android:fontFamily="@font/epilogue_sembold"
        android:text="@string/string_password"
        android:textColor="@color/white"
        app:layout_constraintTop_toTopOf="@+id/rectagle2"
        app:layout_constraintTop_toBottomOf="@+id/tvKonfirmasiKataSandi"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"/>

    <Button
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rectagle2"
        android:layout_marginTop="15dp"
        android:text="@string/simpan"
        android:background="@drawable/rectagle2"
        android:textColor="@color/white"
        />



</androidx.constraintlayout.widget.ConstraintLayout>