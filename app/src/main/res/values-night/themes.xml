<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Temara" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/green_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/green_500</item>
        <!-- Customize your theme here. -->
        <item name="android:itemTextAppearance">@style/customMenuFont</item>
    </style>

    <style name="customMenuFont" parent="@android:style/TextAppearance.Widget.IconMenu.Item">
        <item name="fontFamily">@font/epilogue_medium</item>
    </style>
</resources>